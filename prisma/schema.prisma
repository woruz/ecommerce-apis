// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum Role {
  CUSTOMER
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique                // üîç login lookup
  password  String
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now())

  cart      Cart?
  orders    Order[]

  @@index([role])                            // üîç admin/customer filtering
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  stockQty    Int      @default(0)
  categoryId  Int?
  category    Category? @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orderItems OrderItem[]
  cartItems   CartItem[]

  @@index([categoryId])                      // üîç filter by category
  @@index([price])                           // üîç price range filtering
  @@index([createdAt])                       // üîç sorting / pagination
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique                 // üîç category lookup
  products Product[]
}

model Cart {
  id     Int      @id @default(autoincrement())
  userId Int      @unique                    // üîç 1 cart per user
  user   User     @relation(fields: [userId], references: [id])
  items  CartItem[]

  @@index([userId])                          // (implicit via unique, explicit clarity)
}

model CartItem {
  cartId    Int
  productId Int
  quantity  Int

  cart      Cart    @relation(fields: [cartId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@id([cartId, productId])                  // üîç composite PK
  @@index([productId])                       // üîç reverse lookup (product ‚Üí carts)
}

model Order {
  id         Int         @id @default(autoincrement())
  userId     Int
  totalPrice Float
  status     OrderStatus @default(PENDING)
  createdAt  DateTime    @default(now())

  user       User        @relation(fields: [userId], references: [id])
  items      OrderItem[]

  @@index([userId])
  @@index([createdAt])
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  price     Float
  quantity  Int

  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}
